{% extends 'admin/base.html.twig' %}

{% block title %}Modifier la réservation {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifier la réservation</h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                {{form_row(form.startDate)}}
                {{form_row(form.endDate)}}
            </div>
            <div class="col">
                {{form_row(form.booker)}}
                {{form_row(form.ad)}}
                {{form_row(form.comment)}}
               
            </div>
             
        </div>
        <div class="row">
        <button type="submit" class="btn btn-danger">Valider</button>
        </div>
        {{form_end(form)}}
        
    </div>

{% endblock %}